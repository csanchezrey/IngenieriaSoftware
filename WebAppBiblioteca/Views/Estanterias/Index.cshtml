@model IEnumerable<WebAppBiblioteca.Models.Estanteria>

@{
    ViewBag.Title = "Estanteria";
}

<h2>Estanterias disponibles</h2>

<p>
    @Html.ActionLink("Agregar una estanteria", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.capacidad)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.capacidad)
            </td>
            <td>
                @Html.ActionLink("Modificar", "Edit", new { id = item.codigoEstanteria }) |
                @Html.ActionLink("Consultar", "Details", new { id = item.codigoEstanteria }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.codigoEstanteria })
            </td>
        </tr>
    }

</table>
@Html.ActionLink("Volver", "Index", "Home/Index", null, new { @class = "btn btn-success btn-large" })