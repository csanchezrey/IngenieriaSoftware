@model IEnumerable<WebAppBiblioteca.Models.Usuario>

@{
    ViewBag.Title = "Usuarios";
}

<h2>Listado de usuarios</h2>

<p>
    @Html.ActionLink("Agregar un usuario", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombreCompleto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.direccionPostal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tipoUsuario)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombreCompleto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.direccionPostal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tipoUsuario)
            </td>
            <td>
                @Html.ActionLink("Modificar", "Edit", new { id = item.identificacion }) |
                @Html.ActionLink("Consultar", "Details", new { id = item.identificacion }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.identificacion })
            </td>
        </tr>
    }

</table>
@Html.ActionLink("Volver", "Index", "Home/Index", null, new { @class = "btn btn-success btn-large" })